{{>head-shop}}

<body>
  {{>header-shop}}
  <div class="body-container">
    {{>nav-shop}}
    <div class="main-body-container">
      <p class="title-1">HỒ SƠ CỬA HÀNG</p>
      <div class="hoso">
        <form action="/shop/edit-shop-infor?id={{id}}" method="POST" class="form-1" id="form-input" hidden>
          <div class="row" id="shop-name">
            <div class="col-25">
              <label>Tên cửa hàng</label>
            </div>
            <div class="col-60">
              <input name="name" type="text" id="name" value="{{shopName}}" />
            </div>
          </div>
          <div class="row" id="shop-phone">
            <div class="col-25">
              <label>Số điện thoại</label>
            </div>
            <div class="col-60">
              <input name="phone" type="text" id="phone" value="{{shopPhone}}" />
            </div>
          </div>
          <div class="row" id="shop-address">
            <div class="col-25">
              <label>Địa chỉ</label>
            </div>
            <div class="col-60">
              <input name="address" type="text" id="name" value="{{shopAddress}}" />
            </div>
          </div>
          <div class="row" id="shop-day">
            <div class="col-25">
              <label>Ngày thành lập</label>
            </div>
            <div class="col-60">
              <input name="day" type="text" id="name" value="{{shopEstDay}}" />
            </div>
          </div>
          <div class="row" id="shop-describe">
            <div class="col-25">
              <label>Mô tả cửa hàng</label>
            </div>
            <div class="col-60">
              <textarea name="describe" class="form-control" aria-label="With textarea">{{shopDescribe}}</textarea>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <button onclick="switchingModifyMode()" type="submit">Lưu</button>
          </div>
        </form>
        <form class="form-1" id="form-view">
          <div class="row" id="shop-name-active">
            <div class="col-25">
              <label for="name">Tên cửa hàng</label>
            </div>
            <div class="col-60-txt">
              <label>{{shopName}}</label>
            </div>
          </div>
          <div class="row" id="shop-phone-active">
            <div class="col-25">
              <label for="phone">Số điện thoại</label>
            </div>
            <div class="col-60-txt">
              <label for="phone">{{shopPhone}}</label>
            </div>
          </div>
          <div class="row" id="shop-address-active">
            <div class="col-25">
              <label for="name">Địa chỉ</label>
            </div>
            <div class="col-60-txt">
              <label>{{shopAddress}}</label>
            </div>
          </div>
          <div class="row" id="shop-day-active">
            <div class="col-25">
              <label>Ngày thành lập</label>
            </div>
            <div class="col-60-txt">
              <label>{{moment shopEstDay format='DD-MM-YYYY'}}</label>
            </div>
          </div>
          <div class="row" id="shop-describe-active">
            <div class="col-25">
              <label for="name">Mô tả cửa hàng</label>
            </div>
            <div class="col-60-txt">
              <textarea disabled class="form-control" aria-label="With textarea">{{shopDescribe}}</textarea>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <button onclick="switchingModifyMode()" type="button">Sửa</button>
          </div>
        </form>
        <p class="title-2">Chi tiết</p>
        <form>
          <div class="row">
            <div class="col-25">
              <label for="name">Số lượng mặt hàng</label>
            </div>
            <div class="col-75"><label>{{numProduct}}</label></div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="name">Số sản phẩm đã bán</label>
            </div>
            <div class="col-75"><label>{{numSaledProduct}}</label></div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="name">Đánh giá cửa hàng</label>
            </div>
            <div class="col-75"><label>{{overallRating}}</label></div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="name">Tỉ lệ đơn bị huỷ</label>
            </div>
            <div class="col-75"><label>{{billCanceledRate}}</label></div>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
<script src="./shop-infor.js"></script>