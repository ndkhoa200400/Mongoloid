{{>head-shop}}

<body>
  {{>header-shop}}

  <div class="body-container">
    {{>nav-shop}}
    <div class="main-body">
      <div class="title-body">
        <div class="text">THÊM SẢN PHẨM</div>
      </div>

      <!-- FORM -->
      <div class="form-container">
        <form class="needs-validation" novalidate>

          <!-- Mấy cái nút -->
          <div class="buttons">
            <button class="btn btn-danger" onclick="window.location.href='/product-list'" type="button">Quay
              lại</button>
            <div class="submit-btn">
              <div id="alert"></div>
              <button class="btn btn-primary" type="submit">Đăng sản phẩm</button>
            </div>
          </div>

          <!-- Tên sản phẩm -->
          <label for="validationCustom01">Tên sản phẩm</label>
          <input type="text" class="form-control" id="validationCustom01" name="product-name"
            placeholder="Nhập tên sản phẩm" required>
          <br>
          <!-- Danh mục sản phẩm -->
          <label for="validationCustom02">Danh mục</label>
          <select class="custom-select" id="validationCustom02" name="product-category" required>
            <option selected hidden value="">Chọn danh mục</option>
            <option>Áo</option>
            <option>Quần</option>
            <option>Nón</option>
            <option>Ba lô / Túi xách</option>
          </select>
          <br><br>
          <!-- Giá sản phẩm -->
          <label for="validationCustom03">Giá tiền</label>
          <div class="input-group">
            <input type="number" min="0" step="500" class="form-control" id="validationCustom03" name="product-price"
              placeholder="Nhập giá sản phẩm" required>
            <div class="input-group-append">
              <span class="input-group-text">VNĐ</span>
            </div>
          </div>
          <br>
          <!-- Khuyến mãi -->
          <label for="validationCustom04">Khuyến mãi</label>
          <div class="input-group">
            <input type="number" min="0" step="1" class="form-control" id="validationCustom04" name="product-discount"
              placeholder="Nhập % giảm giá" required>
            <div class="input-group-append">
              <span class="input-group-text">%</span>
            </div>
          </div>
          <br>
          <!-- Số lượng sản phẩm -->
          <label for="validationCustom05">Số lượng sản phẩm</label>
          <input type="number" min="1" step="1" class="form-control" id="validationCustom05" name="product-quantity"
            placeholder="Nhập số lượng sản phẩm" required>
          <br>
          <!-- Mô tả sản phẩm -->
          <label for="validationCustom06">Mô tả sản phẩm</label>
          <textarea class="form-control" aria-label="With textarea" id="validationCustom06" name="product-description"
            placeholder="Nhập mô tả sản phẩm" required></textarea>
          <br>
          <!-- Đăng hình ảnh sản phẩm -->
          <label class="btn btn-light upload-label" for="validationCustom07">Tải lên ảnh sản phẩm</label>
          <div class="custom-file">
            <input type="file" accept="image/*" onchange="loadFile(event)" style="display: none;"
              class="custom-file-input" id="validationCustom07" name="product-image" multiple required>
            <div class="invalid-feedback">
              *Chưa đăng tải hình ảnh sản phẩm
            </div>
            <div id="image-container"></div>
          </div>

        </form>
      </div>

    </div>
  </div>
</body>
<script src="./add-product.js"></script>